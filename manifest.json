{
    "manifest_version": 3,

    "name": "Page Switcher",

    "version": "1.0.1",

    "description": "DNS Shop extension that improves efficiency.",

    "permissions": [
        "tabs",
        "cookies"
    ],

    "host_permissions": [
        "*://*.partner.ru/"
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "commands": {
        "toggle-page": {
            "suggested_key": {
                "default": "Alt+Shift+S"
            },
        "description": "Switch page."
        }
    },

    "content_scripts": [
        {
            "matches": ["http://*.partner.ru/cashier/pay"],
            "js": ["./src/catchCheckPrintAction.js"],
            "run_at": "document_start"
        }
    ]
}