{
    "manifest_version": 3,

    "name": "Page Switcher",

    "version": "1.0.0",

    "description": "Simple Chrome extension to quickly switch between ocnsultant and cassier modes in the DNS web app.",

    "permissions": [
        "tabs"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "commands": {
        "toggle-page": {
            "suggested_key": {
                "default": "Alt+Shift+S",
	"mac": "Alt+Shift+S"
        },
        "description": "Switch page."
    }
}
}